<h2>Follower Users</h2>


<table class="table table-hover table-inverse">
<% if @users.exists? %>
  <thead>
    <tr>
      <th>imeges</th>
      <th>name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followers.count %></td>
        <td>フォロワー数: <%= user.followings.count %></td>
        <td>
           <%= link_to "Show", "/users/#{user.id}" %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</table>