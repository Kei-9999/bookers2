<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
       <%= render 'layouts/book', user:@user, book:@book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
 <table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @user.books. each do |book| %><tr>
          <!--画像を表示-->
            <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to book_path(book) do %>
                <%= book.title %></td>
　              <% end %>
　　　　　　<td><%= book.body %></td>

        </tr>
        <% end %>

    </tbody>
</table>




    </div>
  </div>
</div>
