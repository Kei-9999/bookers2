<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
       <%= render 'layouts/book', user:@user, book:@book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">

        <table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %><tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
           <span>
           <%= link_to "Show", "/books/#{book.id}" %>
           </span>
            </td>

            <td>
           <span>
           <%= link_to "Edit", "/books/#{book.id}/edit" %>
           </span>
            </td>

            <td>
           <span>
           <%= link_to "Destroy", "/books/#{book.id}",method: :delete %>
           </span>
            </td>
        </tr>
        <% end %>

    </tbody>
</table>




    </div>
  </div>
</div>
